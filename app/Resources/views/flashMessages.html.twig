<div id="flash-messages">
	<div id="message-notice" class="ui-widget message ui-corner-bottom closeable ui-helper-hidden">
    	<span class="ui-icon ui-icon-info"></span>
    	{% for flashMessage in app.session.flashbag.get('notice') %}
        	<p><strong>NOTICE:</strong> <span>{{ flashMessage|raw }}</span></p>
        {% else %}
        	<p><strong>NOTICE:</strong> <span id="message-notice-text"></span></p>
        {% endif %}
	</div>
	<div id="message-success" class="ui-widget message ui-corner-bottom closeable ui-helper-hidden">
    	<span class="ui-icon ui-icon-circle-check"></span>
    	{% for flashMessage in app.session.flashbag.get('success') %}
        	<p><strong>SUCCESS:</strong> <span>{{ flashMessage|raw }}</span></p>
        {% else %}
        	<p><strong>SUCCESS:</strong> <span id="message-success-text"></span></p>
        {% endif %}
	</div>
	<div id="message-error" class="ui-widget message ui-corner-bottom closeable ui-helper-hidden">
        <span class="ui-icon ui-icon-alert"></span>
        {% for flashMessage in app.session.flashbag.get('error') %}
        	<p><strong>ERROR:</strong> <span>{{ flashMessage|raw }}</span></p>
        {% else %}
        	<p><strong>ERROR:</strong> <span id="message-error-text"></span></p>
        {% endif %}
	</div>
</div>
{% if app.session.hasFlash('error') or app.session.hasFlash('notice') or app.session.hasFlash('success') %}
	<script defer="defer" type="text/javascript">
		$(window).load(function() {
			{% if app.session.flashbag.get('notice')|length > 0 %}
				$("#message-notice").slideDown(function() {
					setTimeout("resetMessages()", 6000);
				});
			{% endif %}
			{% if app.session.flashbag.get('success')|length > 0 %}
				$("#message-success").slideDown(function() {
					setTimeout("resetMessages()", 6000);
				});
			{% endif %}
			{% if app.session.flashbag.get('error')|length > 0 %}
				$("#message-error").slideDown(function() {
					setTimeout("resetMessages()", 6000);
				});
			{% endif %}
		});
	</script>
{% endif %}