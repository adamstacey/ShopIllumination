{% if result %}
    <div class="trustpilot-reviews-border">
        <div class="trustpilot-reviews-container">
            <div class="trustpilot-reviews">
                <div class="widget-group clearfix">
                    <div class="widget widget-1-of-2">
                        <h2 class="fl">Our customers love us!</h2>
                        <div class="trustpilot-overall-rating">
                            {% for rating in 1..result.TrustScore.Stars %}
                                <span class="trustpilot-review-star trustpilot-review-star-large"></span>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="widget widget-1-of-2">
                        <h3 class="fr" itemscope="" itemtype="http://schema.org/Organization"><span itemprop="name"><strong>Kitchen Appliance Centre</strong></span> <span itemprop="aggregateRating" itemscope="" itemtype="http://schema.org/AggregateRating">rated <span itemprop="ratingValue">{{ result.TrustScore.Stars }}</span>/5 based on <span itemprop="reviewCount">{{ result.ReviewCount.Total|number_format }}</span> <a target="_blank" rel="nofollow" href="http://www.trustpilot.co.uk/review/www.kitchenappliancecentre.co.uk">reviews</a></span> on TrustPilot.co.uk</h3>
                    </div>
                </div>
                {% for review in result.Reviews | slice(0,1) %}
                    <div class="trustpilot-review">
                        <div class="widget-group clearfix">
                            <div class="widget widget-1-of-1">
                                <div class="fl">
                                    <div class="trustpilot-review-user-image">
                                        <a target="_blank" href="{{ review.Url }}"><img width="42" src="{{ review.User.ImageUrls.i73 }}" alt="{{ review.User.Name }}"/></a>
                                    </div>
                                </div>
                                <div class="trustpilot-review-content">
                                    <h4><a target="_blank" href="{{ review.Url }}">{{ review.Title }}</a></h4>
                                    <div class="trustpilot-rating">
                                        <div class="trustpilot-review-user-name">by <a target="_blank" href="{{ review.Url }}"><strong>{{ review.User.Name }}</strong></a></div>
                                        {% for rating in 1..review.TrustScore.Stars %}
                                            <span class="trustpilot-review-star trustpilot-review-star-small"></span>
                                        {% endfor %}
                                    </div>
                                    <a class="trustpilot-review-read-more" target="_blank" href="{{ review.Url }}"><strong>Read More</strong></a>
                                    <p class="trustpilot-review-rating">{{ review.Content }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}