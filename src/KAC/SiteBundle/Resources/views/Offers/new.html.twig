{% extends 'KACSiteBundle::base.html.twig' %}

{% block title %}Add New Offer | {{ parent() }}{% endblock %}

{% block header %}
    <header>
        {{ parent() }}
        <h1>Add New Offer</h1>
    </header>
{% endblock %}
{% block body %}
    <section>
        <div class="widget-group clearfix">
            <div class="widget widget-2-of-7">
                {% include 'KACSiteBundle:Product:newLeftMenu.html.twig' %}
            </div>
            <div class="widget widget-5-of-7">
                {% if flow.getCurrentStep() == 1 %}
                    {% include 'KACSiteBundle:Offers:new_Step1.html.twig' %}
                {% elseif flow.getCurrentStep() == 2 %}
                    {% include 'KACSiteBundle:Offers:new_Step2.html.twig' %}
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}