{% block javascripts %}
	{{ parent() }}
	<script defer="defer" type="text/javascript">
		$(document).ready(function() {
			$(".special-offer .features-link").click(function() {
				if ($(this).html() == '+ Show Features')
				{
					$(".special-offer .features-link").html('- Hide Features');
					$(".special-offer .features").slideDown();
				} else {
					$(".special-offer .features-link").html('+ Show Features');
					$(".special-offer .features").slideUp();
				}
			});
		});
	</script>
