    <div class="widget widget-1-of-1">
        <div class="ui-widget">
            <section class="ui-widget-content ui-corner-all clearfix">
                <div class="slider-wrapper slider-gallery">
                    <ul class="slider">
                        <li><img src="{{ asset('/uploads/demo/maia-gallery-1.jpg') }}" alt="maia Worktops" /></li>
                        <li><img src="{{ asset('/uploads/demo/maia-gallery-2.jpg') }}" alt="maia Worktops" /></li>
