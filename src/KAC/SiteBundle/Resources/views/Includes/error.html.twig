{% extends '::shop.html.twig' %}
{% block title %}An Error Occurred! | {{ parent() }}{% endblock %}
{% block body %}
	<header>
		<h1>Whoops looks like we have a problem!</h1>
	</header>
	<section class="container_6 clearfix">
		
		<div class="grid_6"> 
			<div class="portlet">
				<header>
	                <h2>An Error Occurred!</h2>
	            </header>
				<section>
					<img width="906" class="border" height="305" src="{{ asset('/bundles/kacshop/images/headers/page-not-found.jpg') }}" alt="404 - Page can not be found!" />
