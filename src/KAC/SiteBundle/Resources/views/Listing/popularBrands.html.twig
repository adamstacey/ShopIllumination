{% if brands|length > 0 %}
    <div class="widget-group clearfix">
        <div class="widget widget-1-of-1">
            <div class="ui-widget mbl">
                <header class="ui-widget-header ui-corner-top">
                    <h2>Shop by Popular Brand</h2>
                </header>
                <section class="ui-widget-content ui-corner-bottom">
                    <div class="popular-brands popular-items">
                        <div class="widget-group clearfix">
                            {% for item in brands %}
                                {% set brand = item[0] %}
                                {% if departmentId %}
                                    {% set url = get_listing_url('brand_with_department', brand.id, departmentId) %}
                                    {% if url %}
                                        <div class="widget widget-1-of-{{ brands|length }} popular-item popular-brand tac">
                                            <a href="{{ path('routing', {'url': url}|merge(app.request.query.all)) }}"><img src="{{ brand.images.0.publicPath | apply_filter('logo_medium') }}" border="0" alt="{{ brand.description.name|raw }}" width="75" /></a>
                                        </div>
                                    {% else %}
                                        <div class="widget widget-1-of-{{ brands|length }} popular-item popular-brand tac">
                                            <a href="{{ path('listing_department_brand', {'brandId': brand.id, 'departmentId': departmentId}|merge(app.request.query.all)) }}"><img src="{{ brand.images.0.publicPath | apply_filter('logo_medium') }}" border="0" alt="{{ brand.description.name|raw }}" width="75" /></a>
                                        </div>
                                    {% endif %}
                                {% else %}
                                    {% set url = get_listing_url('brand', brand.id) %}
                                    {% if url %}
                                        <div class="widget widget-1-of-{{ brands|length }} popular-item popular-brand tac">
                                            <a href="{{ path('routing', {'url': url}|merge(app.request.query.all)) }}"><img src="{{ brand.images.0.publicPath | apply_filter('logo_medium') }}" border="0" alt="{{ brand.description.name|raw }}" width="75" /></a>
                                        </div>
                                    {% else %}
                                        <div class="widget widget-1-of-{{ brands|length }} popular-item popular-brand tac">
                                            <a href="{{ path('listing_brand', {'brandId': brand.id}|merge(app.request.query.all)) }}"><img src="{{ brand.images.0.publicPath | apply_filter('logo_medium') }}" border="0" alt="{{ brand.description.name|raw }}" width="75" /></a>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
{% endif %}
