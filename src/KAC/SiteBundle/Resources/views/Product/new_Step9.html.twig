<style>
    .accordion-item {
        position: relative;
    }
    .accordion-header-buttons {
        position: absolute;
        top: 4px;
        right: 52px;
        z-index: 1;
    }
    .accordion-header-buttons button {
        padding: 0 3px;
    }
    .fn {
        float: none !important;
    }
    td.tac .image-preview {
        margin: 0 auto;
    }
    .progress-bar {
        position: relative;
        background-color: #384246;
        height: 30px;
        padding: 5px;
        margin: 0;
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
        border-radius: 4px;
        -moz-box-shadow: 0 1px 5px #000 inset, 0 1px 0 #384246;
        -webkit-box-shadow: 0 1px 5px #000 inset, 0 1px 0 #384246;
        box-shadow: 0 1px 5px #000 inset, 0 1px 0 #384246;
    }

    .progress-bar div {
        display: inline-block;
        height: 100%;
        margin: 0 !important;
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
        border-radius: 4px;
        background-color: #4ec0e3;
        -moz-box-shadow: 0 1px 0 rgba(255, 255, 255, .7) inset;
        -webkit-box-shadow: 0 1px 0 rgba(255, 255, 255, .7) inset;
        box-shadow: 0 1px 0 rgba(255, 255, 255, .7) inset;
        -webkit-transition: width .4s ease-in-out;
        -moz-transition: width .4s ease-in-out;
        -ms-transition: width .4s ease-in-out;
        -o-transition: width .4s ease-in-out;
        transition: width .4s ease-in-out;
        -webkit-background-size: 40px 40px;
        -moz-background-size: 40px 40px;
        background-size: 40px 40px;
        background-repeat: repeat !important;
        background-image: -webkit-gradient(linear, left top, right bottom,
        color-stop(.25, rgba(255, 255, 255, .15)), color-stop(.25, transparent),
        color-stop(.5, transparent), color-stop(.5, rgba(255, 255, 255, .15)),
        color-stop(.75, rgba(255, 255, 255, .15)), color-stop(.75, transparent),
        to(transparent));
        background-image: -webkit-linear-gradient(135deg, rgba(255, 255, 255, .15) 25%, transparent 25%,
        transparent 50%, rgba(255, 255, 255, .15) 50%, rgba(255, 255, 255, .15) 75%,
        transparent 75%, transparent);
        background-image: -moz-linear-gradient(135deg, rgba(255, 255, 255, .15) 25%, transparent 25%,
        transparent 50%, rgba(255, 255, 255, .15) 50%, rgba(255, 255, 255, .15) 75%,
        transparent 75%, transparent);
        background-image: -ms-linear-gradient(135deg, rgba(255, 255, 255, .15) 25%, transparent 25%,
        transparent 50%, rgba(255, 255, 255, .15) 50%, rgba(255, 255, 255, .15) 75%,
        transparent 75%, transparent);
        background-image: -o-linear-gradient(135deg, rgba(255, 255, 255, .15) 25%, transparent 25%,
        transparent 50%, rgba(255, 255, 255, .15) 50%, rgba(255, 255, 255, .15) 75%,
        transparent 75%, transparent);
        background-image: linear-gradient(135deg, rgba(255, 255, 255, .15) 25%, transparent 25%,
        transparent 50%, rgba(255, 255, 255, .15) 50%, rgba(255, 255, 255, .15) 75%,
        transparent 75%, transparent);

        -webkit-animation: animate-stripes 3s linear infinite;
        -moz-animation: animate-stripes 3s linear infinite;
    }
    .progress-bar-caption {
        position: absolute;
        top: 0;
        left: 0;
        line-height: 40px;
        padding: 5px 15px;
        color: #FFF;
        font-size: 10px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .progress-error {
        color: #cc0000;
        font-size: 11px;
        font-weight: bold;
    }
    @-webkit-keyframes animate-stripes {
        0% {background-position: 0 0;} 100% {background-position: 76px 0;}
    }

    @-moz-keyframes animate-stripes {
        0% {background-position: 0 0;} 100% {background-position: 76px 0;}
    }
    .pr {
        position: relative;
    }
    .pa {
        position: absolute;
    }
</style>
