<style>
    .accordion-item {
        position: relative;
    }
    .accordion-header-buttons {
        position: absolute;
        top: 4px;
        right: 52px;
        z-index: 1;
    }
    .accordion-header-buttons button {
        padding: 0 3px;
    }
</style>
<form class="form" id="formStep10" method="post" novalidate="novalidate" action="{{ path(app.request.attributes.get('_route'), app.request.query.all | craue_removeDynamicStepNavigationParameter(flow)) }}" {{ form_enctype(form) }}>
    <div class="widget-group clearfix">
        <div class="widget widget-1-of-1">
            <div class="ui-widget mbl">
                <header class="ui-widget-header ui-corner-top">
                    <span class="nav-icon ui-button-icon-primary ui-icon icon-white icon-1305"></span>
                    <h2>10. Product Images</h2>
                </header>
                <section class="ui-widget-content ui-corner-bottom">
                    {% include 'KACSiteBundle:Includes:formErrors.html.twig' %}
                    <fieldset>
                        <div class="accordion mbm">
                            <div class="accordion-item fileupload">
                                <h3>Images for Product</h3>
                                <div>
                                    <table class="form-table files mbm">
                                        <thead>
                                        <tr>
                                            <th colspan="6"></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                    {{ form_widget(form.images) }}
                                </div>
                            </div>
                            {% for variant in form.variants %}
                                <div class="accordion-item fileupload">
                                    <h3>Images for {{ variant.vars.value.productCode }} ({{ variant.vars.value.prices.0.listPrice|currency(variant.vars.value.prices.0.currencyCode, false, true, '') }})</h3>
                                    <div>
                                        <table class="form-table files mbm">
                                            <thead>
                                            <tr>
                                                <th colspan="6"></th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                        {{ form_rest(variant) }}
                                    </div>
                                </div>
                            {% endfor %}
                            {% do form.variants.setRendered() %}
                        </div>
                        {{ form_rest(form) }}
                    </fieldset>
                    {% include 'CraueFormFlowBundle:FormFlow:stepField.html.twig' %}
                    {% include 'KACSiteBundle:Product:newControls.html.twig' %}
                </section>
            </div>
        </div>
    </div>
</form>

{% raw %}
<!-- The template to display files available for download -->
<script id="template-image-row" type="text/x-template">
    {% for (var i=0, file; file=o.files[i]; i++) { %}
    <tr class="image-row">
        <td class="name">
            <a href="{%=file.url%}" title="{%=file.name%}">{%=file.name%}</a>
        </td>
        <td class="type" colspan="2"><span>
                {% if (file.type == 'gallery') { %}Gallery{% } %}
                {% if (file.type == 'product') { %}Product{% } %}
            </span></td>
        <td><input type="checkbox" name="select[{%=file.id %}]" data-id="{%=file.id %}" /></td>
        <td><img class="handle" src="/bundles/kacsite/images/icons/handle.png" border="0" /></td>
    </tr>
    {% } %}
</script>
{% endraw %}

<script>
    $(function () {
        'use strict';

        $(".files tbody", this).sortable({
            handle: 'td:last',
            update: function() {
                // Update hidden field
                var images = [];
                $(that).find("tr.template-download").each(function(key, row) {
                    images.push($(row).attr("data-id"));
                });
                $(that).find('input[type=hidden]').val(images.join(','));
            }
        }).disableSelection();


        var images = "{{ form.vars.value.images }}";

        if (images) {
            var images = $.getJSON('{{ path('api_images_get_multiple', {'ids': '-1'}) }}'.replace('-1', images), function(data) {
                var template = tmpl("template-image-row");
                var result = template({
                    files: data.files,
                    formatFileSize: this._formatFileSize,
                    options: this.options
                });
                $('.files tbody').append(result);
            });
        }

        $("#formStep10").submit(function() {
            $(".fileupload").each(function() {
                var $images = [];
                var $imagesHiddenInputObject = $(this).find("input[type='hidden']");
                $(this).find(".files tbody tr").each(function() {
                    var $checkBoxObject = $(this).find("input");
                    if($checkBoxObject.is(":checked")) {
                        $images.push($checkBoxObject.attr("data-id"));
                    }
                });
                $imagesHiddenInputObject.val($images.join(','));
            });

            return false;
        });

        $(document).bind('drop dragover', function (e) {
            e.preventDefault();
        });
    });
</script>