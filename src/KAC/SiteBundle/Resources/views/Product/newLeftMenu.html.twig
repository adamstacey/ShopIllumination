<div class="ui-widget mbl">
    <header class="ui-widget-header ui-corner-top">
        <h2>Steps</h2>
    </header>
    <section class="ui-widget-content ui-corner-bottom">
        <nav class="left-menu">
            <ul class="clearfix">
                {% for stepLabel in flow.getStepLabels() %}
                    {% if loop.index == flow.getCurrentStepNumber() %}
                        {% set statusIcon = 'icon-472' %}
                        {% set statusIconColour = 'icon-white' %}
                        {% set buttonColour = ' button-turquoise' %}
                        {% set iconColour = 'turquoise' %}
                    {% else %}
                        {% if flow.isStepDone(loop.index) or flow.isStepDone(loop.index-1) %}
                            {% set statusIcon = 'icon-1120' %}
                            {% set statusIconColour = 'icon-white' %}
                            {% set buttonColour = ' button-green' %}
                            {% set iconColour = 'green' %}
                        {% else %}
                            {% set statusIcon = 'icon-1117' %}
                            {% set statusIconColour = 'icon-red' %}
                            {% set buttonColour = '' %}
                            {% set iconColour = 'grey' %}
                        {% endif %}
                    {% endif %}

                    <li class="clearfix {{ iconColour }}{% if loop.last %} mbn{% endif %}">
                        {% if loop.index == 1 %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-947"></span>
                        {% elseif loop.index == 3 %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-399"></span>
                        {% elseif loop.index == 4 %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-701"></span>
                        {% elseif loop.index == 5 %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-875"></span>
                        {% elseif loop.index == 6 %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-278"></span>
                        {% elseif loop.index == 7 %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-70"></span>
                        {% elseif loop.index == 8 %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-945"></span>
                        {% elseif loop.index == 9 %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-370"></span>
                        {% elseif loop.index == 10 %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-1104"></span>
                        {% elseif loop.index == 11 %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-1306"></span>
                        {% elseif loop.index == 12 %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-52"></span>
                        {% elseif loop.index == 13 %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-1250"></span>
                        {% else %}
                            <span class="nav-icon ui-button-icon-primary ui-icon icon-{{ iconColour }} icon-947"></span>
                        {% endif %}

                        {% if flow.isAllowDynamicStepNavigation() and (loop.index != flow.getCurrentStepNumber()) and (flow.isStepDone(loop.index) or flow.isStepDone(loop.index-1)) and (not flow.isStepSkipped(loop.index)) %}
                            <a data-icon-secondary="{{ statusIcon }}" class="fl ui-button button{{ buttonColour }} {{ statusIconColour }}" href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge(app.request.attributes.get('_route_params')) | craue_addDynamicStepNavigationParameter(flow, loop.index)) }}">
                                {{ stepLabel|raw }}
                            </a>
                        {% else %}
                            <button data-icon-secondary="{{ statusIcon }}" class="fl ui-button button{{ buttonColour }} {{ statusIconColour }}">
                                {{ stepLabel|raw }}
                            </button>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </section>
</div>
