{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %}Forgotten your password? | {{ parent() }}{% endblock %}
{% block page_header %}Forgotten your password?{% endblock %}

{% block fos_user_content %}
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form" id="form-request-password">
        <fieldset>
            {% if invalid_username is defined %}
                <div class="message message-help">
                    <span class="ui-button-icon-primary ui-icon icon-yellow icon-763"></span>
                    <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
                </div>
            {% else %}
                <div class="message message-help">
                    <span class="ui-button-icon-primary ui-icon icon-yellow icon-763"></span>
                    <p>If you have forgotten your password enter your email address and we will email you instructions on how to reset your password.</p>
                </div>
            {% endif %}
            <div class="form-element widget-group clearfix">
                <span title="Enter a valid email address" class="form-helper ui-button-icon-primary ui-icon-small icon-small-763"></span>
                <div class="widget widget-1-of-3">
                    <label for="username"><em class="required" title="This field is required">*</em>&nbsp;Your Email Address</label>
                </div>
                <div class="widget widget-2-of-3">
                    <input class="fill username text" required="required" type="email" id="username" name="username" />
                </div>
            </div>
        </fieldset>

        <div class="clearfix">
            <button type="submit" class="button button-green fr">Reset Password</button>
            <a href="{{ path('fos_user_security_login') }}" class="button button-blue mrs fr">Back to Login</a>
        </div>
    </form>
{% endblock fos_user_content %}
