{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %}Change your password | {{ parent() }}{% endblock %}
{% block page_header %}Change your password{% endblock %}

{% block fos_user_content %}
    <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form" id="form-change-password">
        <fieldset>
            {{ form_row(form.current_password, {'label': 'Old Password', 'help': 'Enter your old password'}) }}
            {{ form_row(form.plainPassword.first, {'label': 'Password', 'help': 'Enter a password'}) }}
            {{ form_row(form.plainPassword.second, {'label' : 'Confirm Password', 'help': 'Confirm your password'}) }}
            {{ form_rest(form) }}
        </fieldset>

        <div class="clearfix">
            <button class="button button-green fr">Change Password</button>
        </div>
    </form>
{% endblock fos_user_content %}
