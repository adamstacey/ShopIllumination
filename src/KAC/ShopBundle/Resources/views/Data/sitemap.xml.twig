<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
   	{# List all brands and brand departments #}
   	{% for brand in brands %}
   		<url>
			<loc>{{ asset(path('routing', {'url': brand.url}), 'nocdn') }}</loc>
			<lastmod>{{ brand.updatedAt|date("Y-m-d") }}</lastmod>
			<changefreq>always</changefreq>
			<priority>1.0</priority>
   		</url>
   		{% if brand.departments|length > 0 %}
   			{% for department in brand.departments %}
				<url>
					<loc>{{ asset(path('department_with_brand_view_all', {'brand': brand.url, 'url': department.url}), 'nocdn') }}</loc>
					<lastmod>{{ brand.updatedAt|date("Y-m-d") }}</lastmod>
					<changefreq>always</changefreq>
					<priority>0.8</priority>
		   		</url>
			{% endfor %}
   		{% endif %}
   	{% endfor %}
   	
   	{# List all departments #}
   	{% for department in departments %}
   		<url>
			<loc>{{ asset(path('department_view_all', {'url': department.url}), 'nocdn') }}</loc>
			<lastmod>{{ department.updatedAt|date("Y-m-d") }}</lastmod>
			<changefreq>always</changefreq>
			<priority>0.8</priority>
   		</url>
   	{% endfor %}
   	
   	{# List all products #}
	{% for product in products %}
   		<url>
			<loc>{{ asset(path('routing', {'url': product.url}), 'nocdn') }}</loc>
			<lastmod>{{ product.updatedAt|date("Y-m-d") }}</lastmod>
			<changefreq>always</changefreq>
			<priority>1.0</priority>
   		</url>
   	{% endfor %}
   	
