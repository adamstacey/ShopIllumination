{% extends '::shop.html.twig' %}
{% block title %}Contact Kitchen Appliance Centre{% endblock %}
{% block metatags %}
	<meta name="description" content="If you need any help or advice please do not hesitate to contact Kitchen Appliance Centre. Call us on 01159 385 111.">
	<meta name="keywords" content="ride direct, 01159 385 111, 01159385111, kitchen appliances, contact us, telephone, email, enquiry, call us, customer service, message, nottingham, giltbrook, ng16 2uz, ng162uz">
{% endblock %}
{% block slider %}
	<div class="container_8 clearfix">
		<header>
			<div class="slider-gallery-container">
				<div class="slider-gallery">
					<div class="slider-element">
						<img src="{{ asset('/bundles/kacshop/images/headers/contact-us.jpg') }}" alt="Need to get hold of us?" />
						<h3 class="left">Need to get hold of us?</h3>
					</div>
				</div>
			</div>
		</header>
	</div>
{% endblock %}
{% block body %}
	<header>
		<h1>Contact Kitchen Appliance Centre</h1>
	</header>
	<section class="container_6 clearfix">
		<div class="grid_4"> 
			<div class="portlet">
				<header>
	                <h2>Send Us a Secure Message</h2>
	            </header>
				<section id="contact-secure-message">
					<div class="clearfix">
						<div class="info-message ui-status-highlight">
							<span class="info-message-icon ui-icon ui-icon-info"></span>
							<p>To send us a message simply fill out and submit the form below.<br />We will make every effort to respond to your enquiry as soon as possible.</p>
							<div class="clear"></div>
						</div>
						<form id="form-secure-message" method="post" action="{{ path('content_contact_us') }}" class="form has-validation">
							<div class="clearfix">
						        <label for="form-enquiry" class="form-label"><em>*</em> Enquiry<small>What is your enquiry about?</small></label>
							    <div class="form-input">
							    	<select id="form-enquiry" name="enquiry" data-message="Please select what your enquiry is about." required="required">
							    		<option value="">- Please Select -</option>
							    		<option value="sales@kitchenappliancecentre.co.uk">Quotes and product information</option>
							    		<option value="delivery@kitchenappliancecentre.co.uk">Information about my delivery</option>
							    		<option value="customerservice@kitchenappliancecentre.co.uk">After sales service and returns</option>
							    		<option value="sales@kitchenappliancecentre.co.uk">Anything else</option>
							    	</select>
							    </div>
						    </div>
							<div class="clearfix">
						        <label for="form-name" class="form-label"><em>*</em> Your Name<small>Enter your full name</small></label>
							    <div class="form-input"><input data-message="Please enter your full name." type="text" id="form-name" name="name" required="required" value="" /></div>
						    </div>
						    <div class="clearfix">
						        <label for="form-email-address" class="form-label"><em>*</em> Your Email Address<small>Enter a valid email address</small></label>
						        <div class="form-input"><input data-message="Please enter a valid email address." type="email" id="form-email-address" name="email-address" required="required" value="" /></div>
						    </div>
						    <div class="clearfix">
						        <label for="form-email-address" class="form-label"><em>*</em> Your Contact Number<small>Enter a contact number</small></label>
						        <div class="form-input"><input data-message="Please enter a contact number." type="text" id="form-contact-number" name="contact-number" required="required" value="" /></div>
						    </div>
						    <div class="clearfix">
						        <label for="form-message" class="form-label"><em>*</em> Your Message<small>Enter a message</small></label>
						        <div class="form-input no-margin-bottom"><textarea data-message="Please enter your message." required="required" id="form-message" name="message"></textarea></div>
						    </div>
						    <div class="clearfix">
						        <div class="form-input buttons no-margin-bottom">
						    		<button type="submit" class="button action-save-about-you ui-button-green" data-icon-primary="ui-icon-circle-check">Send Secure Message</button>
						        </div>
						    </div>
						</form>
					</div>
				</section>
	        </div>
	    </div>
	    <div class="grid_2"> 
			<div class="portlet">
				<header>
	                <h2>Get in Touch</h2>
	            </header>
				<section id="contact-get-in-touch">
					<div class="clearfix" itemscope itemtype="http://schema.org/Organization">
						<p class="no-margin-top">If you need any help or advice please do not hesitate to contact us using one of the methods below. We are here to help!</p>
						<img class="fl contact-detail" src="{{ asset('/bundles/kacshop/images/icons/uk-telephone-box.png') }}" width="20" height="30" border="0" alt="UK Red Telephone Box" />
						<p class="contact-detail separator">
							<strong>By phone:</strong><br />
							<a class="contact-detail" itemprop="telephone" href="tel:+441159385111">01159 385 111</a>
						</p>
						<div class="clear"></div>
						<img class="fl contact-detail" src="{{ asset('/bundles/kacshop/images/icons/at-symbol.png') }}" width="20" height="23" border="0" alt="Green @ Symbol" />
						<p class="contact-detail separator">
							<strong>By email:</strong><br />
							<a class="contact-detail" itemprop="email" href="mailto:sales@kitchenappliancecentre.co.uk">sales@kitchenappliancecentre.co.uk</a>
						</p>
						<div class="clear"></div>
						<img class="fl contact-detail" src="{{ asset('/bundles/kacshop/images/icons/royal-mail-post-box.png') }}" width="20" height="48" border="0" alt="Royal Mail Red Post Box" />
						<p class="contact-detail separator">
							<strong>By post:</strong><br />
							<span class="contact-detail" itemprop="name">Kitchen Appliance Centre</span><br />
							<span itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
								<span class="contact-detail" itemprop="streetAddress">Unit 3 Pentrich Road<br />Giltbrook Industrial Park</span><br />
								<span class="contact-detail" itemprop="addressLocality">Giltbrook</span><br />
								<span class="contact-detail" itemprop="addressRegion">Nottinghamshire</span><br />
								<span class="contact-detail" itemprop="postalCode">NG16 2UZ</span>
							</span>
						</p>
						<img class="fl contact-detail" src="{{ asset('/bundles/kacshop/images/icons/road-sign.png') }}" width="20" height="18" border="0" alt="Road Sign Showing a Sharp Right" />
						<p class="contact-detail no-margin">
							<strong>By visiting:</strong><br />
							<a class="contact-detail" href="{{ path('content_how_to_find_us') }}">Click here for directions</a>
						</p>
					</div>
				</section>
	        </div>
	    </div>
	    <div class="clear"></div>
	</section>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script defer="defer" type="text/javascript">
		$(document).ready(function() {
			$("#contact-directions").height($("#contact-location").height());
			$("#contact-get-in-touch").height($("#contact-secure-message").height());
			$("#form-secure-message, #form-directions").validator({
    			position : 'center right', 
    			offset : [0, -250], 
    			messageClass : 'form-error', 
        		message : '<div><em/></div>'
			});
		});
	</script>
{% endblock %}