{% extends '::shop.html.twig' %}
{% block title %}Secure Login{% endblock %}
{% block slider %}
	<div class="container_8 clearfix">
		<header>
			<div class="slider-gallery-container">
				<div class="slider-gallery">
					<div class="slider-element">
						<img src="{{ asset('/bundles/kacshop/images/headers/security-man.jpg') }}" alt="Man in black T-shirt with Security on the back" />
						<h3 class="right">Kitchen Appliance Centre Secure Login</h3>
					</div>
				</div>
			</div>
		</header>
	</div>
{% endblock %}
{% block body %}
	<header>
        <h1>Kitchen Appliance Centre Secure Login</h1>
    </header>
	<section class="container_6 clearfix">
		<div id="secure-login-container" class="grid_6"> 
			<div class="portlet">
				<header>
	                <h2>Secure Login</h2>
	            </header>
				<section id="secure-login" class="form">
					<div class="clearfix">
						<div class="info-message ui-status-highlight">
							<span class="info-message-icon ui-icon ui-icon-info"></span>
							<p>To login to Kitchen Appliance Centre please enter your email address and password.</p>
							<div class="clear"></div>
						</div>
					    <div class="clearfix">
					        <label for="form-email-address" class="form-label"><em>*</em> Your Email Address<small>Enter a valid email address</small></label>
					        <div class="form-input no-margin-bottom"><input class="full email" data-message="Enter a valid email address" type="email" id="form-secure-login-email-address" name="email-address" required="required" value="" /></div>
					    </div>
					    <div class="clearfix">
					        <label for="form-password" class="form-label"><em>*</em> Your Password<small>Enter your password</small></label>
					        <div class="form-input no-margin-bottom"><input class="full" data-message="Enter a password" type="password" id="form-secure-login-password" name="password" required="required" autocomplete="off" value="" /></div>
					    </div>
					    <div class="clearfix">
					        <div class="form-input"><a href="Javascript:void(0);" class="action-forgotten-your-password">Have you forgotten your password?</a></div>
					    </div>
					    <div class="clearfix">
					        <div class="form-input buttons no-margin-bottom">
					        	<input type="hidden" value="{{ data.referer|default(path('homepage')) }}" name="referer" id="form-secure-login-referer" />
					    		<button type="submit" class="button ui-button-green action-login" data-icon-primary="ui-icon-key">Login</button>
					        </div>
					    </div>
					</div>
				</section>
	        </div>
	    </div>
	    <div class="clear"></div>
	    <div id="forgotten-your-password-container" class="grid_6 ui-helper-hidden"> 
			<div class="portlet">
				<header>
	                <h2>Forgotten your password?</h2>
	            </header>
				<section id="forgotten-your-password" class="form">
					<div class="clearfix">
						<div class="info-message ui-status-highlight">
							<span class="info-message-icon ui-icon ui-icon-info"></span>
							<p>If you have forgotten your password enter your email address and we will email you instructions on how to reset your password.</p>
							<div class="clear"></div>
						</div>
					    <div class="clearfix">
					        <label for="form-email-address" class="form-label"><em>*</em> Your Email Address<small>Enter a valid email address</small></label>
					        <div class="form-input"><input class="full email" required="required" data-message="Enter a valid email address" type="email" id="form-forgotten-your-password-email-address" name="email-address" required="required" value="" /></div>
					    </div>
					    <div class="clearfix">
					        <div class="form-input buttons no-margin-bottom">
					    		<button type="submit" class="button action-reset-password ui-button-green" data-icon-primary="ui-icon-key">Reset Password</button>
					    		<a href="Javascript:void(0);" class="button action-secure-login ui-button-blue" data-icon-primary="ui-icon-key">Secure Login</a>
					        </div>
					    </div>
					</div>
				</section>
	        </div>
	    </div>
	    <div class="clear"></div>
	</section>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	{% include 'KACShopBundle:Security:loginScript.js.twig' %}
{% endblock %}