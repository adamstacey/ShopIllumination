{% block form_row %}
    {% spaceless %}
        <div class="form-element widget-group clearfix">
            <div class="widget widget-1-of-4">
                {{ form_label(form) }}
            </div>
            <div class="widget widget-3-of-4">
                {{ form_widget(form) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock form_row %}

{% block form_rows %}
    {% spaceless %}
        {% for child in form %}
            {{ form_widget(child) }}
        {% endfor %}
    {% endspaceless %}
{% endblock form_rows %}


