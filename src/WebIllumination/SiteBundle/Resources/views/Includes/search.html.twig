{% if app.request.get('_route') in ['listing_products', 'listing_department', 'listing_brand', 'listing_department_brand'] %}
    {% set action = path(app.request.get('_route'), app.request.get('_route_params')|merge(app.request.query.all)) %}
{% else %}
    {% set action = path('listing_products') %}
{% endif %}

<div class="search">
    <form class="search-box" id="search_box" method="GET" action="{{ action }}">
		<img class="fl" src="{{ asset('/bundles/webilluminationshop/images/icons/magnifying-glass.png') }}" width="28" height="28" border="0" alt="Magnifying Glass" />
		<input id="quick_search" name="q" type="text" placeholder="Product Code, Brand, Name..." autocomplete="off" value="{{ app.request.query.get('q', '') }}" />
		<button class="fr action-quick-search button ui-button-blue">Search</button>
	</form>
</div>