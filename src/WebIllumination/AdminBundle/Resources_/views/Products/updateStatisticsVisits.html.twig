<section id="statistics-visits">
	<div id="ajax-statistics-visits">
		<div class="ac">
			<p>Loading data, please wait&hellip;</p>
			<p><img alt="Loading" src="/bundles/webilluminationadmin/images/loaders/ajax-loader-eeeeee.gif" /></p>
		</div>
	</div>
    <script type="text/javascript">
		$(document).ready(function() {
			{# Load the statistics #}
			$.ajax({
   				type: "GET",
   				url: "{{ path('admin_listing_products_ajax_statistics_visits') }}/{{ product.id }}",
   				success: function(data) {
   					$("#ajax-statistics-visits").html(data);
   				}
 			});
		});
	</script>
</section>