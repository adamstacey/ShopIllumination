<section id="seo">
	<div class="info-message ui-status-highlight">
		<span class="info-message-icon ui-icon ui-icon-info"></span>
		<p>Search engine optimisation (SEO) is critical to the success of your site. It is strongly recommended that all the information in this section is completed.</p>
		<div class="clear"></div>
	</div>
	<div id="seo-confirm-reset" class="ui-widget message margin-bottom-5 ui-helper-hidden">
	    <div class="ui-state-error ui-corner-all"> 
	        <p class="small-message">
	            <span class="ui-icon ui-icon-help"></span>
	            <strong>WARNING:</strong> Are you sure you want to reset the SEO for this brand ("{{ brand_description.brand }}")?
	        </p>
	        <p class="small-message message-buttons">
	        	<a href="Javascript:void(0);" class="button ui-button-delete action-reset-seo" data-icon-primary="ui-icon-refresh">Confirm Reset</a>
	        	<a href="Javascript:void(0);" class="button ui-button-default action-cancel-reset-seo">Cancel</a>
	        </p>
	    </div>
	</div>
    <div class="clearfix">
    	<label for="form-url" class="form-label">URL<small>The internal web address</small></label>
        <div class="form-input"><input class="seo-url" type="text" id="form-url" name="url" value="{{ web_address.url }}" /></div>
    </div>
    <div class="clearfix">
        <label for="form-page-title" class="form-label">Page Title<small>Title used by the Browser</small></label>
        <div class="form-input"><input type="text" id="form-page-title" name="page-title" value="{{ brand_description.pageTitle }}" /></div>
    </div>
    <div class="clearfix">
        <label for="form-meta-description" class="form-label">Meta Description<small>Description used by search engines</small></label>
        <div class="form-input"><textarea id="form-meta-description" name="meta-description" rows="3">{{ brand_description.metaDescription }}</textarea></div>
    </div>
    <div class="clearfix">
        <label for="form-meta-keywords" class="form-label">Meta Keywords<small>Keywords used by some search engines, separated by a comma</small></label>
        <div class="form-input"><textarea id="form-meta-keywords" name="meta-keywords" rows="2" class="items">{{ brand_description.metaKeywords }}</textarea></div>
    </div>
    <div class="clearfix">
        <label for="form-search-words" class="form-label">Search Words<small>Alternative search words for this brand, separated by a comma</small></label>
        <div class="form-input"><textarea id="form-search-words" name="search-words" rows="2" class="items">{{ brand_description.searchWords }}</textarea></div>
    </div>
    <div class="clearfix">
        <div class="form-input buttons no-margin-bottom">
        	<button class="button ui-button-default" data-icon-primary="ui-icon-check">Save</button>
        	<a class="button action-confirm-reset-seo" href="Javascript:void(0);" data-icon-primary="ui-icon-refresh">Reset SEO</a>
        </div>
    </div>
    <script type="text/javascript">
		$(document).ready(function() {
		
			{# Action: Reset SEO #}
			$(".action-confirm-reset-seo").live('click', function() {
				$("#seo-confirm-reset").fadeIn();
			});
			$(".action-reset-seo").live('click', function() {
				window.location = '{{ path('brands_reset_seo', { 'id': brand_description.brandId }) }}';
			});
			$(".action-cancel-reset-seo").live('click', function() {
				$("#seo-confirm-reset").fadeOut();
			});
			
			{# Update the description tab #}
			{% if ((web_address.url == "") or (brand_description.pageTitle == "") or (brand_description.header == "") or (brand_description.metaDescription == "") or (brand_description.metaKeywords == "") or (brand_description.searchWords == "")) %}
				$("#tab-seo").addClass("ui-status-error");
			{% else %}
				$("#tab-seo").addClass("ui-status-success");
			{% endif %}
			$("#form-url, #form-page-title, #form-header, #form-meta-description, #form-meta-keywords, #form-search-words").change(function() {
				$("#tab-seo").removeClass("ui-status-success").removeClass("ui-status-highlight").removeClass("ui-status-error");
				if (($("#form-url").val() == "") || ($("#form-page-title").val() == "") || ($("#form-header").val() == "") || ($("#form-meta-description").val() == "") || ($("#form-meta-keywords").val() == "") || ($("#form-search-words").val() == ""))
				{
					$("#tab-seo").addClass("ui-status-error");
				} else {
					$("#tab-seo").addClass("ui-status-success");
				}
			});
			
		});
	</script>
</section>