<div class="ui-helper-hidden more-information-detail form" id="membership-card-membership-card-{{ membershipCard.id }}">
	<div id="membership-card-error-message-{{ membershipCard.id }}" class="ui-helper-hidden ui-widget message closeable">
	    <div class="ui-state-error ui-corner-all no-margin">
	    	<span class="ui-icon ui-icon-alert"></span>
	        <p><strong>ERROR:</strong> <span id="membership-card-error-message-text-{{ membershipCard.id }}"></span></p>
	    </div>
	</div>
	<h5 class="no-margin-top">Membership Card</h5>
	<table width="100%">
		<tr>
			<td width="25%" class="label"><label for="membership-card-membership-number-{{ membershipCard.id }}"><span class="required">*</span> Membership NUmber:</label></td>
			<td width="75%" class="no-padding">
				<input type="text" id="membership-card-membership-number-{{ membershipCard.id }}" data-message="Please enter a membership number." required="required" class="no-margin integer full" value="{{ membershipCard.membershipNumber }}" />
			</td>
		</tr>
	</table>
	<h5>Availability</h5>
	<table width="100%">
		<tr>
			<td width="25%" class="label"><label for="membership-card-valid-from-date-{{ membershipCard.id }}"><span class="required">*</span> Valid From Date:</label></td>
			<td width="25%" class="no-padding">
				<input type="text" id="membership-card-valid-from-date-{{ membershipCard.id }}" data-message="Please enter the date you want the membership card to be available from." required="required" class="no-margin full" value="{{ membershipCard.validFromDate|date("d/m/Y") }}" />
				<input type="hidden" id="membership-card-valid-from-date-formatted-{{ membershipCard.id }}" value="{{ membershipCard.validFromDate|date("Y-m-d") }}" />
			</td>
			<td width="25%" class="label"><label for="membership-card-expiry-date-{{ membershipCard.id }}"><span class="required">*</span> Expiry Date:</label></td>
			<td width="25%" class="no-padding">
				<input type="text" id="membership-card-expiry-date-{{ membershipCard.id }}" data-message="Please enter the date you want the membership card to expire." required="required" class="no-margin full" value="{{ membershipCard.expiryDate|date("d/m/Y") }}" />
				<input type="hidden" id="membership-card-expiry-date-formatted-{{ membershipCard.id }}" value="{{ membershipCard.expiryDate|date("Y-m-d") }}" />
			</td>
		</tr>
	</table>
	<div class="buttons">
		<button data-id="{{ membershipCard.id }}" class="action-save-membership-card button ui-button-green" data-icon-primary="ui-icon-check">Save Membership Card</button>
		<div class="clear"></div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function() {
		{# Setup date pickers #}
		$("#membership-card-valid-from-date-{{ membershipCard.id }}").datepicker({
			changeMonth: true,
			changeYear: true,
			dateFormat: "dd/mm/yy",
			altField: "#membership-card-valid-from-date-formatted-{{ membershipCard.id }}",
			altFormat: "yy-mm-dd"
		});
		$("#membership-card-expiry-date-{{ membershipCard.id }}").datepicker({
			changeMonth: true,
			changeYear: true,
			dateFormat: "dd/mm/yy",
			altField: "#membership-card-expiry-date-formatted-{{ membershipCard.id }}",
			altFormat: "yy-mm-dd"
		});
	});
</script>