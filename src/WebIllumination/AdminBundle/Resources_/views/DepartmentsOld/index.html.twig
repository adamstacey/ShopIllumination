{% extends ':Old:admin.html.twig' %}
{% block title %}{{ settings.multipleItemsTitle }}  | {{ parent() }}{% endblock %}
{% block leftmenu %}
	{{ parent() }}
	{% include 'WebIlluminationAdminBundle:Brands:leftMenu.html.twig' %}  
{% endblock %}
{% block header %}
	{{ parent() }}
	<h2>{{ settings.multipleItemsTitle }}</h2>
{% endblock %}
{% block body %}
    <section class="container_6 clearfix no-padding-top">
    	<div class="grid_6">
    		<div id="confirm-multiple-delete" class="ui-helper-hidden ui-widget following message confirmation-message no-margin no-padding">
			    <div class="ui-state-highlight ui-corner-all no-margin no-padding"> 
			    	<div class="fl no-margin no-padding">
			    		<span class="ui-icon ui-icon-help"></span>
			    		<p class="small-message"><strong>WARNING:</strong> Are you sure you want to delete the selected {{ settings.multipleItemsDescription }} below?</p>
			    	</div>
			        <div class="fr no-margin no-padding">
			        	<a href="Javascript:void(0);" class="fl button ui-corner-none ui-corner-tl ui-corner-bl ui-button-blue action-cancel-multiple-delete">Cancel</a>
			        	<a href="Javascript:void(0);" class="fl button ui-corner-none ui-corner-tr ui-corner-br ui-button-red action-multiple-delete" data-icon-primary="ui-icon-closethick">Confirm Delete</a>
			        </div>
			        <div class="clear"></div>
			    </div>
			</div>
    		<div class="portlet">
				<header>
					<button id="filter-button" class="button ui-button-blue fr action-show-hide-filter" data-icon-primary="ui-icon-triangle-1-s">Filter Results</button>
	                <h2 id="listing-count"><img src="{{ asset('bundles/webilluminationadmin/images/loaders/ajax-bars-loader.gif') }}" border="0" alt="Loading" />Loading&hellip;</h2>
	            </header>
				<section class="no-padding">
					{% include 'WebIlluminationAdminBundle:'~settings.multipleItemsModel~':listingFilter.html.twig' with {'settings': settings, 'filters': filters, 'data': data} %}
					<div id="listing-loading">
						<p class="ac"><img src="{{ asset('bundles/webilluminationadmin/images/loaders/ajax-bars-loader.gif') }}" border="0" alt="Loading" /></p>
						<p class="ac">Loading&hellip;</p>
					</div>
					<div id="listing" class="ui-helper-hidden"></div>
		        	<div class="clear"></div>
		        	{% include 'WebIlluminationAdminBundle:'~settings.multipleItemsModel~':listingToolbar.html.twig' with {'settings': settings, 'data': data} %}
				</section>
	        </div>
		</div>
	</section>
	<div id="preview" title="Preview" class="ui-helper-hidden">
		<iframe width="100%" height="560" src=""></iframe>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	{% include 'WebIlluminationAdminBundle:'~settings.multipleItemsModel~':indexScript.js.twig' with {'settings': settings, 'data': data} %}
{% endblock %}