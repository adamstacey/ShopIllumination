{% if data.mode == 'update' %}
	<li{% if (app.request.attributes.get('_route') == 'admin_'~data.settings.multipleClass~'_update') %} class="current"{% endif %}><a class="navicon-set-white navicon-contact-card" href="{{ path('admin_'~data.settings.multipleClass~'_update', {'id': data.item.id}) }}">Customer</a></li>
	<li{% if (app.request.attributes.get('_route') == 'admin_'~data.settings.multipleClass~'_update_payment') %} class="current"{% endif %}><a class="navicon-set-white navicon-credit-card-front" href="{{ path('admin_'~data.settings.multipleClass~'_update_payment', {'id': data.item.id}) }}">Payment</a></li>
	<li{% if (app.request.attributes.get('_route') == 'admin_'~data.settings.multipleClass~'_update_delivery') %} class="current"{% endif %}><a class="navicon-set-white navicon-open-box" href="{{ path('admin_'~data.settings.multipleClass~'_update_delivery', {'id': data.item.id}) }}">Delivery</a></li>
	<li{% if data.item.items > 0 %} data-notification="{{ data.item.items }}"{% endif %}{% if (app.request.attributes.get('_route') == 'admin_'~data.settings.multipleClass~'_update_products') %} class="current"{% endif %}><a class="navicon-set-white navicon-shopping-basket" href="{{ path('admin_'~data.settings.multipleClass~'_update_products', {'id': data.item.id}) }}">Products</a></li>
	<li{% if data.item.notesCount > 0 %} data-notification="{{ data.item.notesCount }}"{% endif %}{% if (app.request.attributes.get('_route') == 'admin_'~data.settings.multipleClass~'_update_notes') %} class="current"{% endif %}><a class="navicon-set-white navicon-written-speech-bubble" href="{{ path('admin_'~data.settings.multipleClass~'_update_notes', {'id': data.item.id}) }}">Notes</a></li>
{% else %}
	<li{% if (app.request.attributes.get('_route') == 'admin_'~data.settings.multipleClass~'_update') %} class="current"{% endif %}><a class="navicon-set-white navicon-contact-card" href="{{ path('admin_'~data.settings.multipleClass~'_update', {'id': data.item.id}) }}">Add a Customer</a></li>
{% endif %}