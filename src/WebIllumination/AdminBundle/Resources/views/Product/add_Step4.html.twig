{% block form_step %}
<div class="portlet">
    <header>
        <h2>Edit Product Variations</h2>
    </header>
    <section>
        <form class="form has-validation" id="form-add" method="post" action="{{ path(app.request.attributes.get('_route'), app.request.query.all | craue_removeDynamicStepNavigationParameter(flow)) }}" {{ form_enctype(form) }}>
            {% include 'CraueFormFlowBundle:FormFlow:stepField.html.twig' %}
            <div class="clearfix">
                {{ form_errors(form) }}
            </div>

            <table class="data-table" id="product-variant-list" width="100%" data-prototype="{{ form_widget(form.variants.vars.prototype) | e }}">
                <thead>
                    <tr>
                        <th>Active</th>
                        <th>Product Code</th>
                        <th>Features</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in form.variants %}
                        <tr>
                            {{ form_widget(row) }}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            {{ form_rest(form) }}
            {% include 'WebIlluminationAdminBundle:Product:stepControls.html.twig' %}
        </form>
    </section>
</div>
{% endblock %}