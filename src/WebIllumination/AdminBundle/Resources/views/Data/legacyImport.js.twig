<script type="text/javascript">
	$(document).ready(function() {
		{# Load the legacy import data #}
		$("#action_import_data").click(function() {
			$("#ajax_loading").show();
			$("#legacy_import_data").load("{{ path('data_ajax_load_legacy_import_data') }}", function() {
				$("#legacy_import_data table").dataTable({
	                "bJQueryUI": true,
    	            "sPaginationType": "full_numbers"
        		});
        		ajaxFlashMessage('success', 'The data has been successfully imported from the old system.');
		  		$("#ajax_loading").hide();
			});
		});
	});
</script>