{% extends ':Old:admin.html.twig' %}
{% block title %}Import Courier Tracking  | {{ parent() }}{% endblock %}
{% block leftmenu %}
	{% include 'WebIlluminationAdminBundle:'~data.settings.multipleModel~':leftMenu.html.twig' with {'data': data} %}
{% endblock %}
{% block header %}
	{{ parent() }}
	<a href="{{ path('admin_'~data.settings.multiplePath) }}" class="fr button icon-set-white ui-button-black" data-icon-primary="ui-icon-circle-arrow-left">Go Back</a>
	<h2>Import Courier Tracking</h2>
	<div class="clear"></div>
{% endblock %}
{% block body %}
    <section class="container_6 clearfix no-padding-top">
    	<div class="grid_6">
    		<div class="info-message">
				<span class="info-message-icon ui-icon ui-icon-info"></span>
				<p>Any tracking data that has been provided by the couriers will automatically be processed. This process includes updating the status of the order, adding the tracking information as a customer note and completing the order.</p>
				<div class="clear"></div>
			</div>
    		<div class="portlet">
				<header>
	                <h2 id="listing-title-orders">Import Results</h2>
	            </header>
				<section>
                    <form class="form" method="post" novalidate="novalidate" action="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge(app.request.query.all)) }}" {{ form_enctype(form) }}>
						{% if ordersUpdated > 0 %}
							<div class="success-message no-margin">
								<span class="info-message-icon ui-icon ui-icon-circle-check"></span>
								<p>The tracking data for <strong>{{ ordersUpdated }}</strong> order{{ (ordersUpdated == 1?'':'s')}} was imported and updated.</p>
								<div class="clear"></div>
							</div>
						{% else %}
							<div class="error-message no-margin">
								<span class="info-message-icon ui-icon ui-icon-alert"></span>
								<p>Sorry, there was no tracking information to import and update.</p>
								<div class="clear"></div>
							</div>
						{% endif %}
			        	<div class="padding-15 padding-top-5">
				        	<div id="float-buttons" class="clearfix">
                                <div class="clearfix mtl">
                                    <button type="submit" class="button button-green icon-white mlm fr" data-icon-secondary="icon-1118">Process</button>
                                    <a href="{{ path('orders_queue') }}" class="button button-blue icon-white mlm fl" data-icon-secondary="icon-1118">Back</a>
							    </div>
							</div>
			        	</div>
					</form>
				</section>
	        </div>
		</div>
	</section>
{% endblock %}