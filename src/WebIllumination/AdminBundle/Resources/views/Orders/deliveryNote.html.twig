<table cellspacing="0" border="0" style="background-color: #FFFFFF;" cellpadding="0" width="100%">
	<tr>
		<td valign="top">
			<table width="100%" cellspacing="0" border="0" align="center" style="background: #FFFFFF; border: 1px solid #CCCCCC;" cellpadding="0">
				<tr>
					<td valign="top">
						<table width="100%" cellspacing="0" border="0" cellpadding="0">
							<tr>
								<td width="100%" valign="top" style="padding: 20px;">
									<table width="100%" style="border-collapse: collapse;" cellspacing="0" border="0" cellpadding="0">
										<tr>
											<td width="300" valign="top" align="left" style="background: #FFFFFF;"><img height="50" alt="Kitchen Appliance Centre" border="0" src="http://www.kitchenappliancecentre.co.uk/bundles/webilluminationshop/images/logos/kitchen-appliance-centre-email-logo.png" /></td>
											<td valign="top" align="right" style="line-height: 120%; background: #FFFFFF; font-weight: bold; color: #000000; font-size: 24px; font-family: Arial;">{% if order.deliveryType == 'Collection' %}COLLECTION{% else %}DELIVERY{% endif %} NOTE: <span style="line-height: 120%; font-weight: normal; color: #444444; font-size: 24px; font-family: Arial;">{{ order.orderNumber }}</span><br /><span style="line-height: 120%; font-weight: normal; color: #676767; font-size: 16px; font-family: Arial;">{{ order.orderDate|date('d/m/Y h:iA') }}</span></</td>
										</tr>
									</table>
									<table width="100%" style="border-collapse: collapse;" cellspacing="0" border="0" cellpadding="0">
										<tr>
											<td valign="top" align="left" style="background: #FFFFFF; padding: 0;">
												<table width="100%" style="border-collapse: collapse;" cellspacing="0" border="0" cellpadding="0">
													<tr>
														<td valign="top" align="left" style="background: #FFFFFF;">
															<h3 style="border-bottom: 1px dotted #676767; line-height: 100%; color: #000; font-size: 14px; font-family: Arial; padding: 20px 0px 5px 0px; margin: 0px 0px 10px 0px;">{% if order.deliveryType == 'Collection' %}Collection{% else %}Delivery{% endif %}{% if order.deliveryType != 'Collection' %} Address{% endif %}</h3>
														</td>
													</tr>
													<tr>
														{% if order.deliveryType == 'Collection' %}
															<td valign="top" align="left" style="padding: 50px 0 60px 30px; line-height: 120%; background: #FFFFFF; font-weight: bold; color: #CC0000; text-transform: uppercase; font-size: 18px; font-family: 'Arial Black', Arial;">COLLECTION</td>
														{% else %}
															<td valign="top" align="left" style="padding: 50px 0 60px 30px; line-height: 120%; background: #FFFFFF; font-weight: normal; color: #000000; text-transform: uppercase; font-size: 12px; font-family: Arial;">{% spaceless %}
																{{ order.deliveryFirstName }} {{ order.deliveryLastName }}<br />
																{% if order.deliveryOrganisationName != '' %}
																	{{ order.deliveryOrganisationName }}<br />
																{% endif %}
																{{ order.deliveryAddressLine1 }}<br />
																{% if order.deliveryAddressLine2 != '' %}
																	{{ order.deliveryAddressLine2 }}<br />
																{% endif %}
																{{ order.deliveryTownCity }}<br />
																{% if order.deliveryCountyState != '' %}
																	{{ order.deliveryCountyState }}<br />
																{% endif %}
																{% if order.deliveryCountryCode == 'GB' %}
																	{{ order.deliveryPostZipCode }}<br />
																{% endif %}
																{% if order.deliveryCountryCode == 'IE' %}
																	Republic of Ireland
																{% endif %}
															{% endspaceless %}</td>
														{% endif %}
													</tr>
												</table>
											</td>
										</tr>
									</table>
									{% if order.customerNotes|length > 0 %}
										<h3 style="border-bottom: 1px dotted #676767; line-height: 100%; color: #000; font-size: 14px; font-family: Arial; padding: 20px 0px 5px 0px; margin: 0px 0px 0px 0px;">Notes</h3>
										{% for note in order.customerNotes %}
											<p style="font-family: Arial; font-size: 11px; color: #CC0000; padding: 10px 0 0 0; margin: 0; line-height: 100%;"><em>{{ note.note }}</em></p>
										{% endfor %}
									{% endif %}
									<h3 style="border-bottom: 1px dotted #676767; line-height: 100%; color: #000; font-size: 14px; font-family: Arial; padding: 20px 0px 5px 0px; margin: 0px 0px 10px 0px;">Order</h3>
									<table style="border-collapse: collapse; border: 1px solid #CCC;" cellspacing="0" border="0" cellpadding="0" width="100%">
										<tr>
											<td width="1" colspan="2" valign="top" align="left" style="border: 1px solid #CCC; text-align: center; line-height: 120%; background: #DDDDDD; color: #000; font-size: 11px; font-family: Arial; padding: 5px 10px; font-weight: bold;" align="center"><strong>Quantity</strong></td>
											<td valign="top" align="left" style="border: 1px solid #CCC; text-align: center; line-height: 120%; background: #DDDDDD; color: #000; font-size: 11px; font-family: Arial; padding: 5px 10px; font-weight: bold;" align="center"><strong>Product</strong></td>
											<td width="1" valign="top" align="left" style="border: 1px solid #CCC; text-align: center; line-height: 120%; background: #DDDDDD; color: #000; font-size: 11px; font-family: Arial; padding: 5px 10px; font-weight: bold;" align="center"><strong>Code</strong></td>
										</tr>
										{% for product in order.products %}
											<tr>
												<td valign="top" style="border: 1px solid #CCC; line-height: 120%; background: #FFFFFF; color: #000; font-size: 11px; font-family: Arial; padding: 5px 10px; text-align: center;" align="center" width="1">{{ product.quantity }}</td>
												<td valign="top" style="border: 1px solid #CCC; line-height: 120%; background: #FFFFFF; color: #000; font-size: 11px; font-family: Arial; padding: 5px 10px; text-align: center;" align="center" width="1">&times;</td>
												<td valign="top" align="left" style="border: 1px solid #CCC; line-height: 120%; background: #FFFFFF; color: #000; font-size: 11px; font-family: Arial; padding: 5px 10px;">{% spaceless %}
													<strong>{{ product.header }}</strong>
													{% if product.selectedOptionLabels|length > 0 %}
														<br />
														{% for selectedOptionLabel in product.selectedOptionLabels %}
															{% if selectedOptionLabel != '' %}
																&nbsp;&nbsp;-&nbsp;&nbsp;{{ selectedOptionLabel|raw }}{% if not loop.last %}<br />{% endif %}
															{% endif %}
														{% endfor %}
													{% endif %}
												{% endspaceless %}</td>
												<td valign="top" style="border: 1px solid #CCC; line-height: 120%; background: #FFFFFF; color: #000; font-size: 11px; font-family: Arial; padding: 5px 10px; text-align: center;" align="center" width="1">{{ product.productCode }}</td>
											</tr>
										{% endfor %}
										{% if order.membershipCardPurchased > 0 %}
											<tr>
												<td valign="top" style="border: 1px solid #CCC; line-height: 120%; background: #FFFFFF; color: #000; font-size: 11px; font-family: Arial; padding: 5px 10px; text-align: center;" align="center" width="1">1</td>
												<td valign="top" style="border: 1px solid #CCC; line-height: 120%; background: #FFFFFF; color: #000; font-size: 11px; font-family: Arial; padding: 5px 10px; text-align: center;" align="center" width="1">&times;</td>
												<td valign="top" align="left" style="border: 1px solid #CCC; line-height: 120%; background: #FFFFFF; color: #000; font-size: 11px; font-family: Arial; padding: 5px 10px;">Ride Direct Privilege Card</td>
												<td valign="top" style="border: 1px solid #CCC; line-height: 120%; background: #FFFFFF; color: #000; font-size: 11px; font-family: Arial; padding: 5px 10px; text-align: center;" align="center" width="1"><strong>PRIVILEGE</strong></td>
											</tr>
										{% endif %}
									</table>
									<table cellspacing="0" border="0" cellpadding="0" width="100%">
										<tr>
											<td valign="top" style="padding: 10px 0 0 0;" align="left">
												<p style="font-family: Arial; font-size: 12px; color: #000000; padding: 0 0 5px 0; margin: 0; line-height: 100%;">Thank you for placing your order with Kitchen Appliance Centre.</p>
												<p style="font-family: Arial; font-size: 16px; color: #83939C; padding: 0 0 5px 0; margin: 0; line-height: 100%;"><strong>Kitchen Appliance Centre</strong> Sales Team</p>
												<p style="font-family: Arial; font-size: 12px; color: #83939C; padding: 0 0 5px 0; margin: 0; line-height: 100%;"><strong style="color: #59C6F2">t:</strong> 01159 385 111</p>
												<p style="font-family: Arial; font-size: 12px; color: #83939C; padding: 0 0 5px 0; margin: 0; line-height: 100%;"><strong style="color: #59C6F2">e:</strong>  <a style="font-family: Arial; font-size: 12px; color: #59C6F2;" href="mailto:sales@kitchenappliancecentre.co.uk">sales@kitchenappliancecentre.co.uk</a></p>
												<p style="font-family: Arial; font-size: 12px; color: #83939C; padding: 0; margin: 0; line-height: 100%;"><strong style="color: #59C6F2">w:</strong> <a style="font-family: Arial; font-size: 12px; color: #59C6F2;" href="http://www.kitchenappliancecentre.co.uk/">www.kitchenappliancecentre.co.uk</a></p>
											</td>
										</tr>
									</table>
									<p style="font-family: Arial; font-size: 10px; color: #98A7B3; padding: 10px 0; margin: 10px 0 0 0; line-height: 100%; border-top: 2px dotted #98A7B3;">Kitchen Appliance Centre is a trading company of Onefit Ltd. Incorporated in England and Wales. Company Number: 4605369. VAT Number: 728345716. Registered Office: Unit 3 Pentrich Road, Giltbrook Industrial Park, Giltbrook, Nottinghamshire, NG16 2UZ.</p>
								</td>
							</tr>
						</table>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>