function getBillingAddressPreview()
{
	var $addressPreview = "";
	$addressPreview = $addressPreview + $("input#form-billing-first-name").val() + " " + $("input#form-billing-last-name").val() + "\n";
	if ($("input#form-billing-organisation-name").val() != '')
	{
		$addressPreview = $addressPreview + $("input#form-billing-organisation-name").val() + "\n";
	}
	$addressPreview = $addressPreview + $("input#form-billing-address-line-1").val() + "\n";
	if ($("input#form-billing-address-line-2").val() != '')
	{
		$addressPreview = $addressPreview + $("input#form-billing-address-line-2").val() + "\n";
	}
	$addressPreview = $addressPreview + $("input#form-billing-town-city").val() + "\n";
	if ($("input#form-billing-county-state").val() != '')
	{
		$addressPreview = $addressPreview + $("input#form-billing-county-state").val() + "\n";
	}
	if (($("input#form-billing-post-zip-code").val() != '') && ($("input#form-billing-post-zip-code").val() != '000'))
	{
		$addressPreview = $addressPreview + $("input#form-billing-post-zip-code").val() + "\n";
	}
	if ($("select#form-billing-country-code").val() == 'GB')
	{
		$addressPreview = $addressPreview + "UNITED KINGDOM";
	} else if ($("select#form-billing-country-code").val() == 'IE') {
		$addressPreview = $addressPreview + "REPUBLIC OF IRELAND";
	}
	$("textarea#billing-address-preview").val($addressPreview.toUpperCase());
	return true;
}

