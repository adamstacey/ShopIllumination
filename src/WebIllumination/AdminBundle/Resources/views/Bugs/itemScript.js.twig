<script type="text/javascript" defer="defer">
	
	{% include 'WebIlluminationAdminBundle:'~data.settings.multipleModel~':itemFunctions.js.twig' with {'data': data} %}	
	
	$(document).ready(function() {
		{# Update the Internet Browsers list #}
		updateInternetBrowsers();
		$("#form-operating-system").live('change', function() {
			updateInternetBrowsers();	
		});
		
		{# Update the colours of the priorities #}
		$("#form-priority").live('change', function() {
			var $priority = $(this).val();
			var $priorityColour = '';
			switch ($priority)
			{
				case '1':
					$priorityColour = 'grey';
					break;
				case '2':
					$priorityColour = 'yellow';
					break;
				case '3':
					$priorityColour = 'orange';
					break;
				case '4':
					$priorityColour = 'red';
					break;
			}
			$(this).parent().parent().removeClass("grey yellow orange red").addClass($priorityColour);
		});
		
		{# Update the colours of the status #}
		$("#form-status").live('change', function() {
			var $status = $(this).val();
			var $statusColour = '';
			switch ($status)
			{
				case 'Not Started':
					$statusColour = 'red';
					break;
				case 'More Information Required':
					$statusColour = 'blue';
					break;
				case 'In Progress':
					$statusColour = 'orange';
					break;
				case 'Ready for Testing':
					$statusColour = 'yellow';
					break;
				case 'Closed':
					$statusColour = 'grey';
					break;
			}
			$(this).parent().parent().removeClass("grey yellow orange blue red").addClass($statusColour);
		});
	});
</script>