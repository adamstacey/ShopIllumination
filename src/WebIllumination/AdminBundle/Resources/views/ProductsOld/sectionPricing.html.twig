<section id="pricing">
	<div class="clearfix">
        <label class="form-label">Pricing<small>List of prices set for this product</small></label>
        <div class="form-input">
			<div class="prices-container inner-table">
				<table width="100%" id="form-images-container">
			    	<tr class="images-container" id="image-f-1">
			    		<td><input type="text" id="form-image-alt-text-1" name="price-1" placeholder="Supplier Cost" /></td>
			    		<td><input type="text" id="form-image-alt-text-1" name="price-1" placeholder="Markup" /></td>
			    		<td><input type="text" id="form-image-alt-text-1" name="price-1" placeholder="Price" /></td>
					    <td width="1"><a rel="1" href="Javascript:void(0);" class="button ui-button-default">Save</a><input type="hidden" id="form-price-id-1" value="0" /></td>
					    <td width="1" class="no-padding-right"><a rel="1" href="Javascript:void(0);" class="button ui-button-delete">Delete</a></td>
			        </tr>
				</table>
			</div>
			<input type="hidden" id="form-number-of-images" name="number-of-images" value="{% if (images|length > 0) %}{{ images|length }}{% else %}1{% endif %}" />
		</div>
    </div>
    <div class="clearfix">
        <label for="form-hide-prices" class="form-label">Hide Prices<small>Hide any prices for this brand?</small></label>
        <div class="form-input"><label><input type="radio" name="hide-prices" id="form-hide-prices-1" value="1" /> Yes</label> <label><input type="radio" name="hide-prices" id="form-hide-prices-0" value="0" checked="checked" /> No</label></div>
    </div>
    <div id="show-prices-out-of-hours-container" class="clearfix">
        <label for="form-show-prices-out-of-hours" class="form-label">Show Prices Out of Hours<small>Show prices out of hours?</small></label>
        <div class="form-input"><label><input type="radio" name="show-prices-out-of-hours" id="form-show-prices-out-of-hours-1" value="1" /> Yes</label> <label><input type="radio" name="show-prices-out-of-hours" id="form-show-prices-out-of-hours-0" value="0" checked="checked" /> No</label></div>
    </div>
    <script type="text/javascript">
		$(document).ready(function() {
		
			{# Show prices out of hours #}
		    $("#show-prices-out-of-hours-container").hide();
		    $("input[name=hide-prices]").change(function() {
		        if ($(this).val() === '1') {
		            $("#show-prices-out-of-hours-container").show();
		        } else {
		            $("#show-prices-out-of-hours-container").hide();
		        }
		    });
			
		});
	</script>
</section>